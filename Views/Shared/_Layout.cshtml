<!DOCTYPE html>

<html>
<head>
	<title>SportsStore</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Bootstrap demo</title>
	<link rel="stylesheet" asp-href-include="/font-awesome/css/*.css" />
	<link rel="stylesheet" asp-href-include="/bootstrap/css/*.min.css" />
</head>
<body>
	<div class="navbar navbar-dark bg-dark" role="navigation">
		<div class="row">
			<a class="col navbar-expand" href="#">Sklep sportowy</a>
			<div class="col-4 text-right">
				@await Component.InvokeAsync("CartSummary")
			</div>
		</div>
	</div>
	<div class="row m-1 p-1">
		<div id="categories" class="col-3">
			@await Component.InvokeAsync("NavigationMenu")
		</div>
		<div class="col-9">
			@RenderBody()
		</div>
	</div>
</body>
</html>
